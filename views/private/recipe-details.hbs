{{! END OF NAV BAR }}
<div class="flex-recipes">
  <img class="img" src="{{recipes.image}}" alt="my recipe" />
</div>
<div class="flex-data">
  {{#each recipes}}
    <h1>{{name}}</h1>
    <p>{{duration}}</p>
    <hr>
    <p>{{ingredients}}</p>
    <p>{{preparation}}</p>
  {{/each}}
</div>
<button class="button"><a href="/recipes">Back to recipes</a></button>

<hr>

{{#ifIncludes user.recipes recipes._id}}
  <form action="/recipe-details/{{recipes._id}}/delete" method="post">
    <button type="submit">X</button>
  </form>
{{/ifIncludes}}

