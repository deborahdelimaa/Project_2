<link rel="stylesheet" href="/stylesheets/recipes.css">
<div>
<h1>Recipes</h1>
<button><a href="/create-recipe">Create</a></a></button>
</div>
<div class="flexdiv">
{{#each recipes}}
<div class="card" style="width: 18rem; ">
  <img src="{{image}}" class="card-img-top" alt="..." style="width: 18rem; height:13rem">
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <p class="card-text">{{duration}}</p>
  </div>
  <div class="card-body">
    <a href="/recipe-details/{{_id}}" class="card-link">See more</a>
    <div class="dropdown">
	 
    <form action="/planner/{{_id}}" method="post">
    <select name="day">
		<option value="monday">Monday</option>
		<option value="tuesday">Tuesday</option>
		<option value="wednesday">Wednesday</option>
    <option value="thursday">Thursday</option>
    <option value="friday">Friday</option>
    <option value="saturday" >Saturday</option>
    <option value="sunday" >Sunday</option>
    </select>
  <button type="submit">Add to calendar</button>
    </form>
	</div>
  </div>
</div>
{{/each}}
</div>