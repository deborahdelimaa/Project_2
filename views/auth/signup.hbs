
   <link rel="stylesheet" href="/stylesheets/style.css" />

 <nav class="navbar navbar-expand-lg" style="background-color:rgb(20, 99, 86)">
      <div class="container-fluid">
        <a class="navbar-brand" style="color:rgb(255, 241, 189); margin-right: 70vw;" href="/auth/signup">ReMeals</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/auth/signup">Signup
              </a>
            </li>
           
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
           
          </ul>
        </div>
      </div>
    </nav>
<div class="center">

<form action="/auth/signup" method="POST">
<div class="container">
        <div class="card">
            <a class="singup">Sign Up</a>
            <div class="inputBox1">
                <input type="text" required="required" name="email">
                <span class="user">Email</span>
            </div>

            <div class="inputBox">
                <input type="text" required="required" name="username">
                <span>Username</span>
            </div>

            <div class="inputBox">
                <input type="password" required="required" name="password">
                <span>Password</span>
            </div>
            <button type="submit" class="enter" >SignUp</button>

        </div>
    </div>
   
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
     </form>
    </div>
